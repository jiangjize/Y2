<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
">
    <bean id="serviceExporter" class="org.springframework.remoting.rmi.RmiServiceExporter">
        <property name="serviceName" value="serr"/>
        <property name="service" ref="accountService"/>
        <property name="serviceInterface" value="cn.jjz.de3.AccountService"/>
        <property name="registryPort" value="8080"/>
        <property name="servicePort" value="8088"/>
    </bean>
    <bean id="accountService" class="cn.jjz.de3.MobileAccountServiceImpl"/>
</beans>