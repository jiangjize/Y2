<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
                          http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context.xsd
">
    <!--配置数据源-->
    <bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource">
        <property name="driverClassName" value="com.mysql.jdbc.Driver"></property>
        <property name="url" value="jdbc:mysql://localhost:3306/kqdb?ampcharacterEncoding=utf-8"></property>
        <property name="username" value="root"></property>
        <property name="password" value=""></property>
    </bean>
    <!--配置sqlsessionFactoryBean-->
    <bean id="sessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
        <property name="dataSource" ref="dataSource"></property>
        <!--使用Mybatis-config.xml中的配置-->
        <property name="configLocation" value="classpath:Mybatis-config.xml"></property>
       <property name="mapperLocations" value="classpath:cn/jjz/dao/*.xml"></property>
    </bean>
    <!--配置sqlsessionTemplate-->
    <bean id="sessionTemplate" class="org.mybatis.spring.SqlSessionTemplate">
       <constructor-arg name="sqlSessionFactory" ref="sessionFactory"></constructor-arg>
    </bean>
    <!--配置LoginDao-->
    <bean id="logdao" class="org.mybatis.spring.mapper.MapperFactoryBean">
        <property name="mapperInterface" value="cn.jjz.dao.LoginDao"></property>
        <property name="sqlSessionFactory" ref="sessionFactory"></property>
    </bean>
    <bean id="classesdao" class="org.mybatis.spring.mapper.MapperFactoryBean">
        <property name="mapperInterface" value="cn.jjz.dao.ClassesDao"></property>
        <property name="sqlSessionFactory" ref="sessionFactory"></property>
    </bean>
    <bean id="studentdao" class="org.mybatis.spring.mapper.MapperFactoryBean">
        <property name="mapperInterface" value="cn.jjz.dao.StudentDao"></property>
        <property name="sqlSessionFactory" ref="sessionFactory"></property>
    </bean>
    <bean id="attendancedao" class="org.mybatis.spring.mapper.MapperFactoryBean">
        <property name="mapperInterface" value="cn.jjz.dao.AttendanceDao"></property>
        <property name="sqlSessionFactory" ref="sessionFactory"></property>
    </bean>
    <bean id="Studentattendancedao" class="org.mybatis.spring.mapper.MapperFactoryBean">
        <property name="mapperInterface" value="cn.jjz.dao.StudentattendanceDao"></property>
        <property name="sqlSessionFactory" ref="sessionFactory"></property>
    </bean>





</beans>